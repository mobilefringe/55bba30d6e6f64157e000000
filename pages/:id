<script>
    $(document).ready(function(e) {
        function renderAll (){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = "//midtown2.mallmaverick.com/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                if (slug.includes('midtown2-covid-19-update')){
                    $('#page_title').text(data.title);
                    $('#page_content').html(data.body); 
                    $('#fullwidth').show();
                } else {
                    $('#mm_page_title').text(data.title);
                    $('#mm_page_content').html(data.body);    
                    $('#regulqar').show();
                }
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            init_side();
            show_content();
            $('iframe').addClass('scrolloff');
            $('#map_frame').on('click', function () {
                $('iframe').removeClass('scrolloff');
            });
            $("#map_frame").mouseleave(function () {
                $('iframe').addClass('scrolloff');
            });
        }
        $( "#routing-button" ).on( "click", function() {
            let emailEntered = ($('#newsletter_email')[0].value)
            window.document.location = '/newsletter' + '?email=' + emailEntered;
        });
        loadMallDataCached(renderAll); 
		
    });
</script>