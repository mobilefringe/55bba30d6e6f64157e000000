<script>
    $(document).ready(function(e) {
        function renderAll (){
            var pages_json = "//midtown2.mallmaverick.com/pages/midtown2-newsletter.json"
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            init_side();
            show_content();
            
            $('#subForm').submit(function(e){
                e.preventDefault();
                var first_name = $("#fieldtruhirl").val()
                var last_name = $("#fieldtruhirr").val();
                var full_name = first_name + " " + last_name;
                $("#fieldName").val(full_name);
                $("#submit_btn").prop("disabled", true);
                // submit_contest(slug, e);
            });
        }
        loadMallDataCached(renderAll); 
        
        // if ()
        console.log(document.location.search)
        // in newsletter
        // let email.Entered = document.location.search.replace(/^.*?\=/,'');
    });
</script>