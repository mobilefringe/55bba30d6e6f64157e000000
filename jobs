<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var jobs = getJobsList().sortBy(function(o){ return o.name });
            var published_jobs = [];
            $.each( jobs , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_jobs.push(val);
                } 
            });
            renderGeneral($('#jobs_container'), $('#jobs_template'), published_jobs, "jobs");
            init_side();
            show_content();
            $('.collapse').on('show.bs.collapse', function () {
                $(this).parent().attr('class')
           })
        }
        loadMallDataCached(renderAll); 
		
    });
</script>