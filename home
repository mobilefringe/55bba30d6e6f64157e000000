<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            get_instagram("//midtown2.mallmaverick.com/api/v4/midtown2/social.json", 6, 'thumbnail', render_instagram)
            
            var banners = getBanners();
            renderBanner('#banner_template','#home_banner',banners);
            var events = getEventsList();
            $.each(events, function(i, v){
                v.type="events";
            });
            
            var promos = getPromotionsList();
            $.each(promos, function(i, v){
                v.type="promotions";
            });
            var promos_events = (promos.concat(events)).sortBy(function(o){ return o.start_date })[0];
            var pp = [];
            pp.push(promos_events);
            renderPromosEvents('#home_promo_container', '#home_promo_template', pp)
            
            var latest_fashion = getFashions()[0];
            renderFashion('#home_fashion_container', '#home_fashion_template', latest_fashion);

            
            init_side();
            show_content();
            $('.flexslider').flexslider({
                animation: "slide",
            });
            // var popup = getPopups()[0];
            // console.log("cookie", $.cookie())
            
            if(getPopups().length > 0){
                var popup = getPopups()[0];
                var contest = popup.contest;
                if(contest.id){
                    //show form popup
                    $(".popup_img").attr("src", "//mallmaverick.com"+ popup.photo_url)
                    // $(".popup_img").attr("src", "http://via.placeholder.com/550")
                    $("#popup_description").text(popup.description1);
                    if($.cookie("popup_viewed") != "true"){
                        $.cookie("popup_viewed", "true", { expires: 1 });
                        $('<div class="modal-backdrop custom_backdrop popup_backdrop hide_phone"></div>').appendTo(document.body);
                        $('.popup_home_form').show();
                        $('body').addClass('no_scroll');
                    }
                    $('.close_popup_form, .custom_backdrop').click(function(){
                        $(".modal-backdrop").remove();
            	        $(".popup_home_form").remove();
            	        $('body').removeClass('no_scroll');
                    })
                    var contest_details = getContestByID(contest.id)
                    $('#popup_contets_form').submit(function(e){
                        e.preventDefault();
                        $('#popup_submit').prop('disabled', true);
                        submit_contest(contest_details.slug);
                    });
                } 
                else {
                    //show image popup
                    if($.cookie("popup_viewed") != "true"){
                        $.cookie("popup_viewed", "true", { expires: 1 });
                        renderPopUp("#popup_container", "#popup_template", popup)
                        $.cookie("popup_viewed", "true");
                        $('<div class="modal-backdrop custom_backdrop"></div>').appendTo(document.body);
                        $('.popup_home').show()
                    }
                    $('.close_popup, .custom_backdrop').click(function(){
                        $(".modal-backdrop").remove();
            	        $(".popup_home").remove();
                    })
                }
                
            }
        }
        loadMallDataCached(renderAll); 
    })
    
    
    function render_instagram(data){
        $('#instafeed').html(data)
    }
</script>