<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var all_array = []
            var events = getEventsList();
            
            $.each(events, function(i, v){
                v.type="events";
            });
            
            var promos = getPromotionsList();
            $.each(promos, function(i, v){
                v.type="promotions";
            });
            var promos_events = (promos.concat(events)).sortBy(function(o){ return o.start_date });
            var published_promos_events = [];
            $.each( promos_events , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date);
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    published_promos_events.push(val);
                } 
            });
            
            renderPromosEvents('#promo_container', '#promo_template', published_promos_events);
            init_side();
            show_content();
        }
        loadMallDataCached(renderAll); 
		
    });
</script>